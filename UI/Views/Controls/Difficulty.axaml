<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cc="using:MuseDashModToolsUI.Views.Controls">
    <Design.PreviewWith>
        <Border Padding="20">
            <cc:Difficulty />
        </Border>
    </Design.PreviewWith>

    <Style Selector="cc|Difficulty">
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel IsVisible="{TemplateBinding IsVisible}"
                            Margin="5,0">

                    <Image Source="{TemplateBinding Source}"
                           Margin="5,0"
                           Width="30"
                           Height="30" />

                    <TextBlock Text="{TemplateBinding Text}"
                               FontSize="20" />
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>