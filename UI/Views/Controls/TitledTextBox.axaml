<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cc="using:MuseDashModToolsUI.Views.Controls">
    <Design.PreviewWith>
        <Border Padding="20">
            <cc:TitledTextBox />
        </Border>
    </Design.PreviewWith>

    <Style Selector="cc|TitledTextBox">
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{TemplateBinding TitleText}" />
                    <TextBox Text="{TemplateBinding ContentText}" />
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>