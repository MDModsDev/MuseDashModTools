<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MuseDashModToolsUI.ViewModels"
        x:Class="MuseDashModToolsUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/Icon.ico"
        Title="Muse Dash Mod Tools"
        Width="1000" Height="800"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaTitleBarHeightHint="-1"
        WindowStartupLocation="CenterScreen">

    <Grid RowDefinitions="100,*">
        <Image Grid.Row="0" Margin="20,0,0,0" Source="/Assets/Icon.ico" Height="50" Width="50"
               HorizontalAlignment="Left"
               VerticalAlignment="Center" />
        <TextBlock Grid.Row="0" Margin="80,25,0,0" Height="50" FontSize="25" HorizontalAlignment="Left"
                   VerticalAlignment="Center" Text="Muse Dash Mod Tools" />
        <TabStrip Grid.Row="0" HorizontalAlignment="Center" ItemsSource="{Binding Tabs }">
            <TabStrip.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding DisplayName}" Foreground="#FFF" />
                </DataTemplate>
            </TabStrip.ItemTemplate>
        </TabStrip>
    </Grid>
</Window>