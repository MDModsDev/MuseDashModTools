<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <BuiltInComInteropSupport>true</BuiltInComInteropSupport>
        <ApplicationIcon>Assets\Icon.ico</ApplicationIcon>
        <AssemblyName>MuseDashModTools</AssemblyName>
        <BaseOutputPath>$(SolutionDir)bin</BaseOutputPath>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
        <NoWarn>CS7035</NoWarn>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
        <DefineConstants>$(DefineConstants);ENABLE_XAML_HOT_RELOAD</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)' == 'Release'">
        <DebugType>none</DebugType>
        <SelfContained>true</SelfContained>
        <PublishSingleFile>true</PublishSingleFile>
        <PublishTrimmed>false</PublishTrimmed>
        <PublishReadyToRun>false</PublishReadyToRun>
        <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    </PropertyGroup>

    <ItemGroup>
        <AvaloniaResource Include="Assets\**"/>
        <Content Include="Assets\Icon.ico"/>

        <!--Localization Files-->
        <EmbeddedResource Update="Localization\XAML\XAML.resx">
            <Generator>ResXFileCodeGenerator</Generator>
            <LastGenOutput>XAML.Designer.cs</LastGenOutput>
        </EmbeddedResource>
        <Compile Update="Localization\XAML\XAML.Designer.cs">
            <DesignTime>True</DesignTime>
            <AutoGen>True</AutoGen>
            <DependentUpon>XAML.resx</DependentUpon>
        </Compile>
        <EmbeddedResource Update="Localization\General\General.resx">
            <LastGenOutput>General.Designer.cs</LastGenOutput>
            <Generator>ResXFileCodeGenerator</Generator>
        </EmbeddedResource>
        <Compile Update="Localization\General\General.Designer.cs">
            <DesignTime>True</DesignTime>
            <AutoGen>True</AutoGen>
            <DependentUpon>General.resx</DependentUpon>
        </Compile>
        <EmbeddedResource Update="Localization\MsgBox\MsgBox.resx">
            <Generator>ResXFileCodeGenerator</Generator>
            <LastGenOutput>MsgBox.Designer.cs</LastGenOutput>
        </EmbeddedResource>
        <Compile Update="Localization\MsgBox\MsgBox.Designer.cs">
            <DesignTime>True</DesignTime>
            <AutoGen>True</AutoGen>
            <DependentUpon>MsgBox.resx</DependentUpon>
        </Compile>
        <EmbeddedResource Update="Localization\ModDescriptions\ModDescription.resx">
            <Generator>ResXFileCodeGenerator</Generator>
            <LastGenOutput>ModDescription.Designer.cs</LastGenOutput>
        </EmbeddedResource>
        <Compile Update="Localization\ModDescriptions\ModDescription.Designer.cs">
            <DesignTime>True</DesignTime>
            <AutoGen>True</AutoGen>
            <DependentUpon>ModDescription.resx</DependentUpon>
        </Compile>
    </ItemGroup>

    <!--Hot Reload Packages-->
    <ItemGroup>
        <PackageReference Include="Antelcat.I18N.Avalonia"/>
        <PackageReference Condition="$(DefineConstants.Contains(ENABLE_XAML_HOT_RELOAD))" Include="Avalonia.Markup.Xaml.Loader"/>
        <PackageReference Condition="$(DefineConstants.Contains(ENABLE_XAML_HOT_RELOAD))" Include="HotAvalonia"/>
        <PackageReference Include="HotAvalonia.Extensions" PrivateAssets="All"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="AssetsTools.NET"/>
        <PackageReference Include="Autofac"/>
        <PackageReference Include="Avalonia"/>
        <PackageReference Include="Avalonia.Controls.ItemsRepeater"/>
        <PackageReference Include="Avalonia.Desktop"/>
        <!--Condition below is needed to remove Avalonia.Diagnostics package from build output in Release configuration.-->
        <PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Avalonia.Diagnostics"/>
        <PackageReference Include="Avalonia.Xaml.Behaviors"/>
        <PackageReference Include="CommunityToolkit.Mvvm"/>
        <PackageReference Include="CliWrap"/>
        <PackageReference Include="Irihi.Ursa"/>
        <PackageReference Include="JetBrains.Annotations"/>
        <PackageReference Include="LavaGang.MelonLoader"/>
        <PackageReference Include="Mapster"/>
        <PackageReference Include="Markdown.Avalonia"/>
        <PackageReference Include="NuGet.Versioning"/>
        <PackageReference Include="ReactiveUI"/>
        <PackageReference Include="Semi.Avalonia"/>
        <PackageReference Include="Serilog"/>
        <PackageReference Include="Serilog.Sinks.Console"/>
        <PackageReference Include="Serilog.Sinks.File"/>
        <PackageReference Include="ValveKeyValue"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Styles\MuseDashModToolsUI.Styles.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <Folder Include="Services\"/>
    </ItemGroup>
</Project>