<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mdmt="https://github.com/MDModsDev/MuseDashModTools"
             xmlns:vm="using:MuseDashModTools.ViewModels.Panels.Setting"
             x:Class="MuseDashModTools.Views.Panels.Setting.ExperiencePanel"
             x:DataType="vm:ExperiencePanelViewModel"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1000">

    <Design.DataContext>
        <vm:ExperiencePanelViewModel />
    </Design.DataContext>

    <StackPanel MinWidth="600"
                MaxWidth="800"
                Margin="30"
                HorizontalAlignment="Left"
                Orientation="Vertical"
                Spacing="50">

        <!--  Show Console  -->
        <mdmt:SettingItem Title="Show Console" Description="Whether to display the console after the game is launched">
            <ToggleSwitch IsChecked="{Binding Config.ShowConsole, Mode=OneWayToSource}" />
        </mdmt:SettingItem>

        <mdmt:SettingItem Title="Always Show ScrollBar" Description="Always show scrollbar for mod list">
            <ToggleSwitch IsChecked="{Binding Config.AlwaysShowScrollBar, Mode=OneWayToSource}" />
        </mdmt:SettingItem>

    </StackPanel>
</UserControl>