<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:constants="clr-namespace:MuseDashModTools.Common;assembly=MuseDashModTools.Common"
             xmlns:mdmt="https://github.com/MDModsDev/MuseDashModTools"
             xmlns:pages="using:MuseDashModTools.ViewModels.Panels.Setting"
             x:Class="MuseDashModTools.Views.Panels.Setting.AboutPanel"
             x:DataType="pages:AboutPanelViewModel"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1000">

    <Design.DataContext>
        <pages:AboutPanelViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <Style Selector="Button">
            <Setter Property="Command" Value="{Binding OpenUrlCommand, Mode=OneTime}" />
        </Style>
        <Style Selector="InvokeCommandAction">
            <Setter Property="Command" Value="{Binding OpenUrlCommand, Mode=OneTime}" />
        </Style>
    </UserControl.Styles>

    <ScrollViewer>
        <DockPanel Margin="20">

            <!-- Header -->
            <StackPanel DockPanel.Dock="Top"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal"
                        Spacing="20">

                <!-- LOGO -->
                <Image Source="/Assets/Melon.webp"
                       Height="120"
                       RenderOptions.BitmapInterpolationMode="HighQuality"
                       Classes="animate-scale">
                    <Image.Styles>
                        <Style Selector="Image.animate-scale">
                            <Style.Animations>
                                <Animation Duration="0:0:0.3"
                                           FillMode="Forward">
                                    <KeyFrame Cue="0%">
                                        <Setter Property="ScaleTransform.ScaleX" Value="0.8" />
                                        <Setter Property="ScaleTransform.ScaleY" Value="0.8" />
                                        <Setter Property="Opacity" Value="0" />
                                    </KeyFrame>
                                    <KeyFrame Cue="100%">
                                        <Setter Property="ScaleTransform.ScaleX" Value="1" />
                                        <Setter Property="ScaleTransform.ScaleY" Value="1" />
                                        <Setter Property="Opacity" Value="1" />
                                    </KeyFrame>
                                </Animation>
                            </Style.Animations>
                        </Style>
                    </Image.Styles>
                </Image>

                <!-- Title & Version & Copyright -->
                <StackPanel VerticalAlignment="Center" Spacing="3">
                    <TextBlock Text="Muse Dash Mod Tools"
                               Classes="H1"
                               Theme="{StaticResource TitleTextBlock}"
                               HorizontalAlignment="Center" />
                    <StackPanel Orientation="Horizontal"
                                Spacing="10">
                        <Label Classes="Blue"
                               Height="10"
                               Content="{x:Static constants:BuildInfo.DisplayVersion}"
                               Theme="{StaticResource TagLabel}" />
                        <TextBlock Foreground="Gray"
                                   Text="{x:Static constants:BuildInfo.CopyRight}" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Others -->
            <StackPanel DockPanel.Dock="Bottom"
                        Margin="10, 25, 37, 0"
                        Orientation="Vertical"
                        Spacing="10">

                <!-- About -->
                <Border Theme="{DynamicResource CardBorder}">
                    <StackPanel Orientation="Vertical" Spacing="20">
                        <TextBlock Margin="13, 3, 13, 0"
                                   Foreground="LightSlateGray">
                            <TextBlock.Inlines>
                                <Run Text="Muse Dash Mod Tools is licensed under the" />
                                <InlineUIContainer>
                                    <Image Height="13"
                                           Margin="3,0"
                                           Source="/Assets/MIT_Logo.png"
                                           Cursor="Hand">
                                        <Interaction.Behaviors>
                                            <EventTriggerBehavior EventName="Tapped">
                                                <InvokeCommandAction
                                                    CommandParameter="https://github.com/MDModsDev/MuseDashModTools?tab=MIT-1-ov-file#MIT-1-ov-file" />
                                            </EventTriggerBehavior>
                                        </Interaction.Behaviors>
                                    </Image>
                                </InlineUIContainer>
                                <Run Text="license." />
                                <Run Text="Powered by" />
                                <InlineUIContainer>
                                    <Image Height="18"
                                           Margin="3,0"
                                           Source="/Assets/DotNet_Logo.png"
                                           Cursor="Hand">
                                        <Interaction.Behaviors>
                                            <EventTriggerBehavior EventName="Tapped">
                                                <InvokeCommandAction CommandParameter="https://dotnet.microsoft.com" />
                                            </EventTriggerBehavior>
                                        </Interaction.Behaviors>
                                    </Image>
                                </InlineUIContainer>
                                <Run Text="9.0 &amp;" />
                                <InlineUIContainer>
                                    <Image Height="18"
                                           Margin="3,0"
                                           Source="/Assets/Avalonia_Logo.png"
                                           Cursor="Hand">
                                        <Interaction.Behaviors>
                                            <EventTriggerBehavior EventName="Tapped">
                                                <InvokeCommandAction CommandParameter="https://avaloniaui.net" />
                                            </EventTriggerBehavior>
                                        </Interaction.Behaviors>
                                    </Image>
                                </InlineUIContainer>
                                <Run Text="Avalonia 11.2.4." />
                            </TextBlock.Inlines>
                        </TextBlock>

                        <!-- Links -->
                        <StackPanel Orientation="Horizontal" Spacing="15">
                            <Button Theme="{DynamicResource BorderlessButton}"
                                    Content="Check Update"
                                    Command="{Binding CheckUpdateCommand, Mode=OneTime}" />
                            <Button Theme="{DynamicResource BorderlessButton}"
                                    Content="Source Code"
                                    CommandParameter="https://github.com/MDModsDev/MuseDashModTools" />
                            <Button Theme="{DynamicResource BorderlessButton}"
                                    Content="Crowdin Translate"
                                    CommandParameter="https://crowdin.com/project/musedashmodtools" />
                            <Button Theme="{DynamicResource BorderlessButton}"
                                    Content="MDMC Website"
                                    CommandParameter="https://mdmc.moe/" />
                            <Button Theme="{DynamicResource BorderlessButton}"
                                    Content="MDMC Discord"
                                    CommandParameter="https://discord.gg/mdmc" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Contributor Cards -->
                <ItemsControl ItemsSource="{Binding ContributorGroups, Mode=OneTime}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0 16">
                                <TextBlock Text="{Binding Name, Mode=OneTime}"
                                           Theme="{StaticResource TitleTextBlock}"
                                           Classes="H4" />
                                <ItemsControl ItemsSource="{Binding Contributors, Mode=OneTime}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <mdmt:ContributorCardControl
                                                Source="{Binding ., Mode=OneTime}"
                                                Margin="8" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </DockPanel>
    </ScrollViewer>
</UserControl>