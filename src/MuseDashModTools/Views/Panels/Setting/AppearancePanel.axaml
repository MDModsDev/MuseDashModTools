<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mdmt="https://github.com/MDModsDev/MuseDashModTools"
             xmlns:pages="using:MuseDashModTools.ViewModels.Panels.Setting"
             x:Class="MuseDashModTools.Views.Panels.Setting.AppearancePanel"
             x:DataType="pages:AppearancePanelViewModel"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1000">

    <Design.DataContext>
        <pages:AppearancePanelViewModel />
    </Design.DataContext>

    <StackPanel MinWidth="600"
                MaxWidth="800"
                Margin="30"
                HorizontalAlignment="Left"
                Orientation="Vertical"
                Spacing="50">

        <!--  Language  -->
        <!--  TODO: Implement languages switch  -->
        <mdmt:SettingItem Title="Language" Description="The current version does not support switching languages.">
            <mdmt:SettingItem.Content>
                <ComboBox IsEnabled="False" SelectedIndex="0">
                    <ComboBoxItem Content="English" />
                </ComboBox>
            </mdmt:SettingItem.Content>
        </mdmt:SettingItem>

    </StackPanel>
</UserControl>