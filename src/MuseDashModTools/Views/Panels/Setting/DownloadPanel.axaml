<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:enums="clr-namespace:MuseDashModTools.Models.Enums;assembly=MuseDashModTools.Models"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mdmt="https://github.com/MDModsDev/MuseDashModTools"
             xmlns:pages="using:MuseDashModTools.ViewModels.Panels.Setting"
             x:Class="MuseDashModTools.Views.Panels.Setting.DownloadPanel"
             x:DataType="pages:DownloadPanelViewModel"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1000">

    <Design.DataContext>
        <pages:DownloadPanelViewModel />
    </Design.DataContext>

    <StackPanel MinWidth="600"
                MaxWidth="800"
                Margin="30"
                HorizontalAlignment="Left"
                Orientation="Vertical"
                Spacing="50">

        <!--  Download Source  -->
        <mdmt:SettingItem Title="Download Source" Description="Source to get mod list and downloads">
            <mdmt:SettingItem.Content>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <ComboBox ItemsSource="{Binding DownloadSources, Mode=OneTime}" SelectedIndex="{Binding SelectedDownloadSourceIndex, Mode=TwoWay}" />
                    <TextBox MinWidth="200"
                             Classes="ClearButton"
                             Foreground="Gray"
                             IsVisible="{Binding Config.DownloadSource, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static enums:DownloadSource.Custom}, Mode=OneWay}"
                             Text="{Binding Config.CustomDownloadSource, Mode=TwoWay}"
                             Watermark="Input link here" />
                </StackPanel>
            </mdmt:SettingItem.Content>
        </mdmt:SettingItem>

        <!--  Update Source  -->
        <mdmt:SettingItem Title="Update Source" Description="Source to check for MDMT updates">
            <mdmt:SettingItem.Content>
                <ComboBox ItemsSource="{Binding UpdateSources, Mode=OneTime}" SelectedIndex="{Binding SelectedUpdateSourceIndex, Mode=TwoWay}" />
            </mdmt:SettingItem.Content>
        </mdmt:SettingItem>

        <!--  GitHub Token  -->
        <mdmt:SettingItem Title="GitHub Token"
                          Description="GitHub Token used for GitHub API access, required for GitHub API update source"
                          IsVisible="{Binding Config.UpdateSource, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static enums:UpdateSource.GitHubAPI}, Mode=OneWay}">
            <mdmt:SettingItem.Content>
                <TextBox Classes="ClearButton"
                         Foreground="Gray"
                         Text="{Binding Config.GitHubToken, Mode=TwoWay}"
                         Watermark="Leave blank if no need" />
            </mdmt:SettingItem.Content>
        </mdmt:SettingItem>

        <!--  Download Prerelease  -->
        <mdmt:SettingItem Title="Download Prerelease" Description="Check for pre-release versions when checking for MDMT updates">
            <mdmt:SettingItem.Content>
                <ToggleSwitch IsChecked="{Binding Config.DownloadPrerelease, Mode=TwoWay}" />
            </mdmt:SettingItem.Content>
        </mdmt:SettingItem>

    </StackPanel>
</UserControl>