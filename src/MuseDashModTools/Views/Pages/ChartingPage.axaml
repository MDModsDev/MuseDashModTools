<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdmt="https://github.com/MDModsDev/MuseDashModTools"
    xmlns:vm="using:MuseDashModTools.ViewModels.Pages"
    x:Class="MuseDashModTools.Views.Pages.ChartingPage"
    x:DataType="vm:ChartingPageViewModel"
    d:DesignHeight="700"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:ChartingPageViewModel />
    </Design.DataContext>

    <Grid
        RowDefinitions="Auto, *">
        <Border
            Classes="WinMainNav">
            <Panel>
                <mdmt:NaviPanelListControl
                    ItemsSource="{Binding NavItems, Mode=OneTime}"
                    SelectedItem="{Binding SelectedItem, Mode=TwoWay}" />
                <mdmt:NaviButtonsControl
                    Source="{Binding DropDownButtons, Mode=OneTime}" />
            </Panel>
        </Border>
        <TransitioningContentControl
            Grid.Row="1"
            Content="{Binding Content, Mode=OneWay}"
            Margin="0,10,10,10" />
    </Grid>

</UserControl>