<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:loc="https://github.com/MDModsDev/MuseDashModTools/Localization"
    xmlns:mdmt="https://github.com/MDModsDev/MuseDashModTools"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:vm="using:MuseDashModTools.ViewModels.Pages"
    x:Class="MuseDashModTools.Views.Pages.HomePage"
    x:DataType="vm:HomePageViewModel">

    <Design.DataContext>
        <vm:HomePageViewModel />
    </Design.DataContext>

    <Grid>

        <!--  Background Image  -->
        <Image
            Source="{DynamicResource BackgroundImage}"
            Stretch="UniformToFill" />

        <!--  Title Image  -->
        <Image
            Height="120"
            HorizontalAlignment="Left"
            Margin="50,60"
            Source="{DynamicResource TitleImage}"
            VerticalAlignment="Top" />

        <!--  Play Button  -->
        <mdmt:PlayButton
            Command="{Binding LaunchGameCommand, Mode=OneTime}"
            Content="{Localize {x:Static loc:XAMLLiteral.Button_LaunchGame}}"
            ItemsSource="{Binding GameModes, Mode=OneTime}"
            SelectedIndex="{Binding SelectedGameModeIndex, Mode=TwoWay}" />

        <!--  Donation Button  -->
        <Button
            Classes="Donation"
            Command="{Binding ShowDonationDrawerCommand, Mode=OneTime}">
            <Image
                Height="100"
                Source="avares://MuseDashModTools/Assets/Genshin.webp" />
        </Button>

        <!--  Donation Drawer  -->
        <u:OverlayDialogHost
            HostId="DonationDrawerHost" />

    </Grid>

    <UserControl.Styles>

        <!--  Donation Button Style  -->
        <Style
            Selector="Button.Donation">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Margin" Value="0,60,90,0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition
                        Property="RenderTransform"
                        Duration="0:0:0.2"
                        Easing="ExponentialEaseOut" />
                </Transitions>
            </Setter>
        </Style>
        <Style
            Selector="Button.Donation:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style
            Selector="Button.Donation:pointerover">
            <Setter Property="RenderTransform" Value="scale(1.2) rotate(40deg)" />
        </Style>
        <Style
            Selector="Button.Donation:pressed">
            <Setter Property="RenderTransform" Value="scale(1.1) rotate(40deg)" />
        </Style>
    </UserControl.Styles>

</UserControl>