<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:MuseDashModTools.ViewModels.Components"
    x:Class="MuseDashModTools.Views.Components.DonationDialog"
    x:DataType="vm:DonationDialogViewModel"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:DonationDialogViewModel />
    </Design.DataContext>

    <StackPanel
        Margin="20"
        Spacing="20">

        <TextBlock
            FontSize="14"
            Text="本软件是基于开源项目原神的二次创作，我们耗费数个月才打造出如此3A大作。"
            TextAlignment="Center"
            TextWrapping="Wrap" />

        <TextBlock
            FontSize="16"
            Text="3A是骗你的，心血是真的，无论捐赠与否，我们都感谢您的支持！"
            TextAlignment="Center"
            TextWrapping="Wrap" />

        <UniformGrid
            Columns="3"
            Margin="0,15"
            Rows="1"
            Width="600">

            <!--  WeChat Pay  -->
            <StackPanel
                HorizontalAlignment="Center"
                Spacing="10">
                <Border
                    Classes="DialogDonationQr">
                    <Image
                        Classes="DialogDonationQr"
                        Source="/Assets/Donation/WeChatPay.webp" />
                </Border>
            </StackPanel>

            <!--  AliPay  -->
            <StackPanel
                HorizontalAlignment="Center"
                Spacing="10">
                <Border
                    Classes="DialogDonationQr">
                    <Image
                        Classes="DialogDonationQr"
                        Source="/Assets/Donation/AliPay.webp" />
                </Border>
            </StackPanel>

            <!--  PayPal  -->
            <StackPanel
                HorizontalAlignment="Center"
                Spacing="10">
                <Border
                    Classes="DialogDonationCard">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Spacing="5"
                        VerticalAlignment="Center">
                        <Image
                            Height="28"
                            Source="/Assets/Donation/PayPal.webp" />
                        <HyperlinkButton
                            Classes="PaypalButton"
                            Content="点击捐赠"
                            FontSize="14"
                            HorizontalAlignment="Center"
                            Margin="0,8,0,0"
                            NavigateUri="https://paypal.me/lxymahatma" />
                    </StackPanel>
                </Border>
            </StackPanel>

        </UniformGrid>
    </StackPanel>

    <UserControl.Styles>
        <Style
            Selector="Border">

            <!--  QR Code Container Style  -->
            <Style
                Selector="^.DialogDonationQr">
                <Setter Property="Width" Value="160" />
                <Setter Property="Height" Value="170" />
                <Setter Property="Margin" Value="10" />
                <Setter Property="ClipToBounds" Value="True" />
                <Setter Property="CornerRadius" Value="15" />
                <Setter Property="BoxShadow" Value="0 2 8 #20000000" />
            </Style>

            <!--  PayPal Card Style  -->
            <Style
                Selector="^.DialogDonationCard">
                <Setter Property="Width" Value="160" />
                <Setter Property="Height" Value="170" />
                <Setter Property="Margin" Value="10" />
                <Setter Property="Background" Value="#0070ba" />
                <Setter Property="CornerRadius" Value="15" />
                <Setter Property="BoxShadow" Value="0 2 8 #20000000" />
            </Style>

        </Style>

        <!--  Unified Image Style  -->
        <Style
            Selector="Image">
            <Style
                Selector="^.DialogDonationQr">
                <Setter Property="Width" Value="160" />
                <Setter Property="Height" Value="170" />
                <Setter Property="Stretch" Value="UniformToFill" />
            </Style>
        </Style>

        <!--  Unified Hyperlink Style  -->
        <Style
            Selector="HyperlinkButton">
            <Style
                Selector="^.PaypalButton">
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="FontSize" Value="12" />
            </Style>
        </Style>

    </UserControl.Styles>

</UserControl>