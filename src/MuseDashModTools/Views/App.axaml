<Application
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:semi="https://irihi.tech/semi"
    xmlns:u-Semi="https://irihi.tech/ursa/themes/semi"
    xmlns:vm="using:MuseDashModTools.ViewModels"
    x:Class="MuseDashModTools.Views.App"
    x:DataType="vm:AppViewModel"
    RequestedThemeVariant="Dark">

    <Application.Styles>
        <StyleInclude
            Source="avares://MuseDashModTools.Styles/ModToolsStyles.axaml" />
        <semi:SemiTheme />
        <semi:SemiPopupAnimations />
        <u-Semi:SemiTheme />
    </Application.Styles>

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon
                Icon="avares://MuseDashModTools/Assets/Icon.ico"
                ToolTipText="Muse Dash Mod Tools">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem
                            Command="{Binding ShowCommand}"
                            Header="Show" />
                        <NativeMenuItem
                            Command="{Binding ExitCommand}"
                            Header="Exit" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>

</Application>