<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Card  -->
    <Style Selector="Border.SharedCard">
        <Setter Property="Background" Value="{DynamicResource CardBackground}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="Padding" Value="20" />
    </Style>

    <!--  Hover  -->
    <Style Selector="Border.SharedHover">
        <Setter Property="Background" Value="{DynamicResource SecondaryCardColor}" />
        <Setter Property="ClipToBounds" Value="True" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="RenderTransform" Value="none" />
        <Setter Property="Theme" Value="{DynamicResource CardBorder}" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Duration="0:0:0.2" Property="Background" />
                <TransformOperationsTransition Duration="0:0:0.2" Property="RenderTransform" />
            </Transitions>
        </Setter>
    </Style>

    <!-- Dialog Donation Qr Container  -->
    <Style Selector="Border.DialogDonationQr">
        <Setter Property="Width" Value="230" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="ClipToBounds" Value="True" />
        <Setter Property="CornerRadius" Value="20" />
    </Style>

    <!--  Navigation  -->
    <Style Selector="Border.WinMainNav">
        <Setter Property="Height" Value="45" />
        <Setter Property="Margin" Value="0,0,20,10" />
        <Setter Property="Padding" Value="12,4" />
        <Setter Property="Theme" Value="{DynamicResource CardBorder}" />
    </Style>

</Styles>