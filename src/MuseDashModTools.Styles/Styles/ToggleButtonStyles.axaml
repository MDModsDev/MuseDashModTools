<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style
        Selector="ToggleButton">
        <!--  Play Button Dropdown  -->
        <Style
            Selector="^.SelectPlayVersion">
            <Setter Property="Background" Value="{DynamicResource SecondaryButtonGradient}" />
            <Setter Property="Height" Value="60" />
            <Setter Property="Width" Value="45" />
            <Setter Property="CornerRadius" Value="0,18,18,0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition
                        Property="RenderTransform"
                        Duration="0:0:0.2"
                        Easing="CubicEaseOut" />
                </Transitions>
            </Setter>
        </Style>

        <Style
            Selector="^.SelectPlayVersion /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SecondaryButtonGradient}" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition
                        Property="Background"
                        Duration="0:0:0.15"
                        Easing="CubicEaseInOut" />
                </Transitions>
            </Setter>
        </Style>

        <Style
            Selector="^.SelectPlayVersion:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SecondaryButtonHoverGradient}" />
        </Style>

        <Style
            Selector="^.SelectPlayVersion:pointerover">
            <Setter Property="RenderTransform" Value="scale(1.02)" />
        </Style>

        <Style
            Selector="^.SelectPlayVersion:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SecondaryButtonPressedGradient}" />
        </Style>

        <Style
            Selector="^.SelectPlayVersion:pressed">
            <Setter Property="RenderTransform" Value="scale(0.95)" />
        </Style>

        <Style
            Selector="^.SelectPlayVersion:checked /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SecondaryButtonGradient}" />
        </Style>
    </Style>
</Styles>