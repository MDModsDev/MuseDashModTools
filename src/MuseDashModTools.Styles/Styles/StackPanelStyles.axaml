<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style
        Selector="StackPanel">
        <!--  Root Content List Container  -->
        <Style
            Selector="^.ContentListRoot">
            <Setter Property="Margin" Value="30" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="Orientation" Value="Vertical" />
            <Setter Property="Spacing" Value="50" />
        </Style>

        <!--  Content List Item (vertical layout)  -->
        <Style
            Selector="^.ContentListItemVertical">
            <Setter Property="Orientation" Value="Vertical" />
            <Setter Property="Spacing" Value="10" />
        </Style>

        <!--  Content List Item (Horizontal Layout)  -->
        <Style
            Selector="^.ContentListItemHorizontal">
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="Spacing" Value="10" />
        </Style>

        <!--  Controls Container (Horizontal Layout)  -->
        <Style
            Selector="^.ControlsHorizontal">
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="Spacing" Value="8" />
        </Style>
    </Style>

</Styles>