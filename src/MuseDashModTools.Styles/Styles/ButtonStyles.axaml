<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Transparent Button  -->
    <Style Selector="Button.SharedTransparent">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style Selector="Button.SharedTransparent /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style Selector="Button.SharedTransparent:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="Button.SharedTransparent:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <!--  Card Button  -->
    <Style Selector="Button.SharedCard">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Stretch" />
    </Style>
    <Style Selector="Button.SharedCard /template/ ContentPresenter">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
    </Style>

    <!--  Donation Button  -->
    <Style Selector="Button.PageHomeDonation">
        <Setter Property="Padding" Value="0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Transitions">
            <Transitions>
                <TransformOperationsTransition Property="RenderTransform"
                                               Duration="0:0:0.2"
                                               Easing="ExponentialEaseOut" />
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="Button.PageHomeDonation:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="Button.PageHomeDonation:pointerover">
        <Setter Property="RenderTransform" Value="scale(1.2) rotate(40deg)" />
    </Style>
    <Style Selector="Button.PageHomeDonation:pressed">
        <Setter Property="RenderTransform" Value="scale(1.1) rotate(40deg)" />
    </Style>

</Styles>