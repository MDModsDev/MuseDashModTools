<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mdmt="https://github.com/MDModsDev/MuseDashModToolsUI">
    <Design.PreviewWith>
        <Border Padding="20">
            <mdmt:Difficulty />
        </Border>
    </Design.PreviewWith>

    <Style Selector="mdmt|Difficulty">
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel IsVisible="{TemplateBinding IsVisible}"
                            Margin="5,0">

                    <Image Source="{TemplateBinding Source}"
                           Margin="5,0"
                           Width="30"
                           Height="30" />

                    <TextBlock Text="{TemplateBinding Text}"
                               FontSize="20" />
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>