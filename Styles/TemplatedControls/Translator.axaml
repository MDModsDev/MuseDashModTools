<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mdmt="https://github.com/MDModsDev/MuseDashModTools">
    <Design.PreviewWith>
        <Border Padding="20">
            <mdmt:Translator Text="lxymahatma" />
        </Border>
    </Design.PreviewWith>

    <Style Selector="mdmt|Translator">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Width="140"
                        Height="120"
                        Margin="0,10"
                        Background="#595959">

                    <StackPanel>
                        <Image Width="60"
                               Height="60"
                               Margin="0,0,0,15"
                               Source="{TemplateBinding Source}" />

                        <TextBlock MinWidth="100"
                                   HorizontalAlignment="Center"
                                   FontSize="18"
                                   Text="{TemplateBinding Text}"
                                   TextAlignment="Center" />
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>