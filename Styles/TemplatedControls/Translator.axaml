<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mdmt="https://github.com/MDModsDev/MuseDashModToolsUI">
    <Design.PreviewWith>
        <Border Padding="20">
            <mdmt:Translator Text="lxymahatma" />
        </Border>
    </Design.PreviewWith>

    <Style Selector="mdmt|Translator">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="#595959"
                        Height="120"
                        Width="140"
                        Margin="0,10">

                    <StackPanel>
                        <Image Source="{TemplateBinding Source}"
                               Height="60"
                               Width="60"
                               Margin="0,0,0,15" />

                        <TextBlock Text="{TemplateBinding Text}"
                                   FontSize="18"
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center"
                                   MinWidth="100" />
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>